<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wika.wikachat">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.Conversations"></activity>
        <activity android:name=".activities.ProfileList" />
        <activity android:name=".activities.EditBiography" />
        <activity android:name=".activities.LanguageSelection" />
        <activity android:name=".activities.CountrySelection" />
        <activity android:name=".activities.ResetPassword" />
        <activity
            android:name=".activities.Chat"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ForeignProfile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MyProfile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ProfileCreation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.Credits"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.Register"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.Login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ProfileCreation2"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>